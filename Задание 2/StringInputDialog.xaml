<Window x:Class="Task_2.StringInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2"
        mc:Ignorable="d"
        Title="Строка для замены" Height="250" Width="300" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="changeLineBox" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" FontFamily="Times New Roman" FontSize="14" AutomationProperties.HelpText="Введите строку для замены"/>
        <Button x:Name="confirmButton"  Grid.Row="1" Grid.Column="1" Content="Изменить" HorizontalAlignment="Center" Margin="10,10,10,10"  VerticalAlignment="Center" Width="75" Click="confirmButton_Click" FontFamily="Times New Roman" FontSize="14" AutomationProperties.HelpText="Введите строку для замены"/>
    </Grid>
</Window>
